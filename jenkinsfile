pipeline {
  agent {
    node {
      label 'docker-maven-slave'
    }
  }
  stages {
    stage('Maven Build') {
      steps {
        checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/mohitknamdeo/DevOpsDemo.git']]])
        sh 'mvn clean package'
      }
    }
    stage('Quality Check with SonarQube') {
      steps {
      	withSonarQubeEnv('sonarqube') { 
	  sh "mvn sonar:sonar"
	}
      }
    }
    stage('Push the Artifact into Nexus') {
      steps {
      	nexusArtifactUploader artifacts: [[artifactId: 'DevOpsDemo', classifier: '', file: 'target/DevOpsDemo.war', type: 'war']], credentialsId: 'nexus-repository-upload', groupId: 'com.blazeclan', nexusUrl: '172.31.13.55:8081/nexus', nexusVersion: 'nexus2', protocol: 'http', repository: 'maven-central', version: '${BUILD_NUMBER}'
      }
    }
  }
}
