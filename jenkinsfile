pipeline {
  agent {
    node {
      label 'docker-maven-slave'
    }
  }
  stages {
    stage('Maven Build') {
      steps {
        checkout([
		$class: 'GitSCM', 
		branches: [[name: '*/master']], 
		extensions: [], 
		userRemoteConfigs: [[url: 'https://github.com/mohitknamdeo/DevOpsDemo.git']]
		])
        sh 'mvn clean package'
      }
    }
    stage('Quality Check of codes with SonarQube') {
      steps {
      	withSonarQubeEnv('sonarqube') { 
	  sh "mvn sonar:sonar"
	}
      }
    }
    stage('Push the Artifact into Nexus') {
      steps {
      	nexusArtifactUploader artifacts: [
			[
				artifactId: 'DevOpsDemo', 
				classifier: '', 
				file: 'target/DevOpsDemo.war', 
				type: 'war'
			]
	], 
	credentialsId: 'nexus-repository-upload', 
	groupId: 'com.blazeclan', 
	nexusUrl: '172.31.13.55:8081/nexus', 
	nexusVersion: 'nexus2', 
	protocol: 'http', 
	repository: 'maven-central', 
	version: '${BUILD_NUMBER}'
      }
    }
    stage('Pull the Artifact from Nexus and Deploy on Production') {
      agent any
      steps {
      	sh 'curl -X GET http://mohit:highrisk@3.110.218.42:8081/nexus/service/local/repositories/maven-central/content/com/blazeclan/DevOpsDemo/${WarVersion}/DevOpsDemo-${WarVersion}.war -o DevOpsDemo-${WarVersion}.war'
	deploy adapters: [
		tomcat9(credentialsId: 'tomcat-cred', 
		path: '', 
		url: 'http://tomcat:8080')
	], 
	contextPath: 'DevOpsDemo-App', 
	war: '**/*.war'
      }
      post {
        always{
	  deleteDir()
          slackSend channel: '#alert', message: 'Build Started: ${JOB_NAME} ${BUILD_NUMBER} (<${BUILD_URL}|Open>)', teamDomain: 'jenkins-trainingtalk', tokenCredentialId: 'slack-notifier'
        }
      }
    }
  }
}
