pipeline {
  agent {
    node {
      label 'docker-maven-slave'
    }
  }
  stages {
    stage('Repo checkout and Maven Build') {
      steps {
        checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/mohitknamdeo/DevOpsDemo.git']]])
        sh 'mvn clean package'
      }
    }
    stage('Quality Check with SonarQube') {
      steps {
      	withSonarQubeEnv('sonarqube') { 
	  sh "mvn sonar:sonar"
	}
      }
    }
  }
}
